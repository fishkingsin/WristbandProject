<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Non focused states -->
	<item
		android:state_focused="false"
		android:state_selected="false"
		android:state_pressed="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <gradient android:startColor="#00000000" android:endColor="#00000000" android:centerColor="#00000000" android:angle="270"></gradient>
		    <stroke android:width="4dp" android:color="#FF000000" />
		    </shape>
		</item>
	<item
		android:state_focused="false"
		android:state_selected="true"
		android:state_pressed="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <gradient android:startColor="#FFFFFF" android:endColor="#FF5290C2" android:centerColor="#FF63AEE0" android:angle="270"></gradient>
		    <stroke android:width="4dp" android:color="#FF000000" />
		    </shape>
		</item>
	<!-- Focused states -->
	<item
		android:state_focused="true"
		android:state_selected="true"
		android:state_pressed="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <gradient android:startColor="#FFFFFF" android:endColor="#FF5290C2" android:centerColor="#FF63AEE0" android:angle="270"></gradient>
		    <stroke android:width="4dp" android:color="#FF000000" />
		    </shape>
		</item>
	<!-- Pressed state -->
	<item
		android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <gradient android:startColor="#FFFFFF" android:endColor="#FF5290C2" android:centerColor="#FF63AEE0" android:angle="270"></gradient>
		    <stroke android:width="4dp" android:color="#FF000000" />
		    </shape>
		</item>
</selector>