<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/default_bg_color">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/title_background"
	    android:visibility="gone" >

		    <ImageView
		        android:id="@+id/connectivity"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/textView8"
		        android:layout_alignWithParentIfMissing="false"
		        android:layout_centerHorizontal="true"
		        android:layout_centerInParent="true"
		        android:layout_centerVertical="true"
		        android:padding="10dp"
		        android:src="@drawable/wireless_connection_icon_4" />

		    <TextView
		        android:id="@+id/titlebar_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:text="Activity Level"
		        android:textAppearance="?android:attr/textAppearanceLarge" />

		    <Button
		        android:id="@+id/btn_settings_done"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_alignBaseline="@+id/titlebar_textview"
		        android:layout_alignBottom="@+id/titlebar_textview"
		        android:layout_alignParentLeft="true"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:background="@drawable/btn_done_selector"
		        android:visibility="gone" />

		</RelativeLayout>
	<fragment
		class="com.idthk.wristband.ui.TabsFragment"
		android:id="@+id/tabs_fragment"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
